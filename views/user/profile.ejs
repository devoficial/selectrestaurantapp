<% include ../partials/header %>

<div class="container text-center">
        
<div class="row justify-content-center">
<!--semantic profile-->
<div class="col-md-4 cards">
  <!---->
  <div class="ui card">
  <div class="image">
    <img src="<%=user.avatar%>">
    
  </div>
  <a href="#" class="ui brown basic button" data-toggle="modal" data-target="#basicModal">Change avatar</a>
  <div class="content">
      <div class="description">
        <p><%= user.username.charAt(0).toUpperCase() + user.username.substr(1)%> has submitted <%= restaurants.length %> restaurants</p>
      </div>
  </div>
  <div class="extra content">
    <div class="ui large transparent left icon input">
      <% restaurants.forEach(function(restaurant){ %>
      <div class="ui horizontal list">
      
      <ul class="item">
        <li>
        <img class="ui avatar image" src="<%= restaurant.img %>">
             <div class="header">
                <p><a href="/home/<%= restaurant.id %>"><%= restaurant.name %></a></p>
              </div>
            </li>
            </ul>
        </div>
       <% }) %>
      </div>
      
    </div>
  </div>
</div>
<!--modal to updated user profile-->
<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="ui form" action="/users/<%= currentUser._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
           <h4 class="ui dividing header">Update profile pic</h4>
            <div class="field">
            <input type="file" name="avatar" accept="image/*"class="form-control">
          </div>
        <button class="ui inverted yellow button" type="submit">Update</button>
      </div>
      </form>
      </div>
    </div>
  </div>
</div>


</div>
</div>
</div>


<% include ../partials/footer %>